@model List<DoAnWeb.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Styles.Render("~/bundles/adminTableCss")
<link href="../Content/dataTables.bootstrap4.css" rel="stylesheet">
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/Scripts/v4-shims.js"></script>
<h2>Danh Mục sách</h2>
<div>
    <div class="row">
        <div class="col-10"></div>
        <div class="fa fa-plus col-2">
            @Html.ActionLink("Thêm Loại Sách", $"Add")
        </div>
    </div>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTableCate">
            <thead>
                <tr role="row">
                    <th>Tên Loại Sách</th>
                    <th>Mô Tả</th>
                    <th>Lựa Chọn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DoAnWeb.Models.Category item in Model)
                {
                    <tr>
                        <td>@item.CateName</td>
                        <td style="text-overflow: ellipsis; width:800px;">@item.Description</td>
                        <td>
                            @*@Html.ActionLink("Sửa", $"Edit/{item.CateId}")|
                            <a href="CategoryManager/Delete/@item.CateId" onclick="return confirm('Bạn có muốn xóa @item.CateName');">Xóa</a>|
                            @Html.ActionLink("Chi Tiết", $"Detail/{item.CateId}")*@
                            <a href="CategoryManager/Edit/@item.CateId">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a href="CategoryManager/Delete/@item.CateId" onclick="return confirm('Bạn có muốn xóa @item.CateName');">
                                <i class="fa fa-times" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@Scripts.Render("~/bundles/adminTableJs")
<script>
    $(document).ready(function () {
        $('#dataTableCate').DataTable();
    });
</script>