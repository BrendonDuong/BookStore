@model DoAnWeb.Models.Author

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

<h2>Sửa Thông Tin Tài Khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.AuthorId, new { @value = Model.AuthorId })
    @Html.ValidationMessageFor(model => model.AuthorId, "", new { @class = "text-danger" })
    <div class="form-horizontal row">
        <div class="col-1">
        </div>
        <div class="col-5">
            <div class="form-group">
                @Html.LabelFor(model => model.AuthorName, "Tên Tác Giả", htmlAttributes: new { @class = "control-label col-md-4" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control", value = Model.AuthorName } })
                    @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.History, "Tiểu Sử", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("History", new { htmlAttributes = new { @class = "form-control" }, @cols = "60", @rows = "7", @value = Model.History })
                    @Html.ValidationMessageFor(model => model.History, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-1">
        </div>
        <div class="col-5">
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" onclick="return IsEmptyInformationCategory('AuthorName')" class="btn btn-default" />
            </div>
        </div>

    </div>
    @Scripts.Render("~/Scripts/Effect.js");
}
<div class="row" style="margin-bottom:30px">
    <div class="col">
        @Html.ActionLink("Về Lại Danh Sách", "Index")
    </div>
</div>
