
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Styles.Render("~/bundles/adminTableCss")
<link href="../Content/dataTables.bootstrap4.css" rel="stylesheet">
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/Scripts/v4-shims.js"></script>
<h2>Quản Lý Tài Khoản</h2>
<div>
    <div class="row">
        <div class="col-10"></div>
        <div class="fa fa-plus col-2">
            @Html.ActionLink("Thêm Tài Khoản", $"Add")
        </div>
    </div>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTableCate">
            <thead>
                <tr role="row">
                    <th>Username</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Quyền Hoạt Động</th>
                    <th>Quyền Admin</th>
                    <th>Lựa Chọn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DoAnWeb.Models.User item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td style="text-overflow: ellipsis;">@item.Email</td>
                        <td>@item.IsActive</td>
                        <td>@item.IsAdmin</td>
                        <td>
                            @*@Html.ActionLink("Sửa", $"Edit/{item.UserName}")|
                            <a href="AccountManager/Delete/@item.UserName" onclick="return confirm('Bạn có muốn xóa @item.UserName');">Xóa</a>*@
                            <a href="AccountManager/Edit/@item.UserName">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a href="AccountManager/Delete/@item.UserName" onclick="return confirm('Bạn có muốn xóa @item.UserName');">
                                <i class="fa fa-times" aria-hidden="true"></i>
                            </a>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@Scripts.Render("~/bundles/adminTableJs")
<script>
    $(document).ready(function () {
        $('#dataTableCate').DataTable();
    });
</script>