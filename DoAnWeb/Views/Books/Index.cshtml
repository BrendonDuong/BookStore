@model List<DoAnWeb.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<div class="menu-slider-header">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="left-sidebar-header">
                    <a>
                        Danh Mục
                        <i class="fa fa-list" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="left-sidebar-content">
                    <ul>
                        <li>
                            <a href="#">
                                Thể loại
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </a>
                            <div class="sub-menu">
                                <ul>
                                    <li class="sub-menu-title">
                                        <h2>Thể loại</h2>
                                    </li>
                                    @foreach (var item in ViewBag.Cate)
                                    {
                                        <li>
                                            <a href="~/Books/SearchByCate/@item.CateId/1">
                                                @item.CateName
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                        <li>
                            <a href="#">
                                Tác giả
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </a>
                            <div class="sub-menu">
                                <ul>
                                    <li class="sub-menu-title">
                                        <h2>Tác giả</h2>
                                    </li>
                                    @{Html.RenderAction("ListAuthor", "Authors");}
                                </ul>
                            </div>
                        </li>
                        <li>
                            <a href="#">
                                Nhà xuất bản
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </a>
                            <div class="sub-menu">
                                <ul>
                                    <li class="sub-menu-title">
                                        <h2>Nhà xuất bản</h2>
                                    </li>
                                    @{Html.RenderAction("ListPublisher", "Publisher");}
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="left-sidebar-banner">
                    <a>
                        <img src="~/Assest/Thumnail/sach-tiki.jpg" />
                    </a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="right-sidebar-header">
                    <ul>
                        <li><a href="#">Trang chủ</a></li>
                        <li><a href="#">Sản Phẩm</a></li>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="right-sidebar-content">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                            <li data-target="#myCarousel" data-slide-to="4"></li>
                            <li data-target="#myCarousel" data-slide-to="5"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/Assest/Thumnail/bannerfhs-V2.jpg" style="width:100%">
                            </div>

                            <div class="item">
                                <img src="~/Assest/Thumnail/ChuNhat-W1-915x423.jpg" style="width:100%">
                            </div>

                            <div class="item">
                                <img src="~/Assest/Thumnail/Death-915x423-V2.jpg" style="width:100%">
                            </div>
                            <div class="item">
                                <img src="~/Assest/Thumnail/Haruki-Murakami-915x423-1.jpg" style="width:100%">
                            </div>
                            <div class="item">
                                <img src="~/Assest/Thumnail/QV-915x423.jpg" style="width:100%">
                            </div>
                            <div class="item">
                                <img src="~/Assest/Thumnail/The-Best-Books-of-2018-915x423.jpg" style="width:100%">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="banner-top">
        <div class="row m-pad-top-10">
            <div class="fhs-banner-image-block" style="">
                <div class="col-sm-6 col-md-6 col-xs-12">
                    <div class="banner-home-inner ">
                        <a href="#">
                            <img src="https://www.fahasa.com/media/wysiwyg/Thang-12-2018/TIPS-596x186-2.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3 col-xs-6 m-pad-l-5">
                    <div class="banner-home-inner ">
                        <a href="#">
                            <img src="https://www.fahasa.com/media/wysiwyg/Thang-12-2018/TIPS-270x186-2.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3 col-xs-6 m-pad-r-5">
                    <div class="banner-home-inner ">
                        <a href="#">
                            <img src="https://www.fahasa.com/media/wysiwyg/Thang-11-2018/Fahasa-Book-Award-270x186.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-product-vh">
    <div class="container">
        <div class="row">
            <a href="~/PopularContent/NewestBook/1">
                <h4>Sách mới nhất</h4>
            </a>
            @{
                Html.RenderAction("GetBookByNewest", "PopularContent");
            }
        </div>
    </div>
</div>

<div class="content-product-vh">
    <div class="container">
        <div class="row">
            <a href="~/PopularContent/PopularestBook/1">
                <h4>Sách bán chạy nhất</h4>
            </a>
            @{
                Html.RenderAction("GetBookByPopularest", "PopularContent");
            }
        </div>
    </div>
</div>

<div class="content-product-vh">
    <div class="container">
        <div class="row">
            <a href="~/Books/SearchByCate/1/1">
                <h4>Sách kiếm hiệp</h4>
            </a>
            @{
                Html.RenderAction("SearchByCate", "PopularContent", new { id = 1 });
            }
        </div>
    </div>
</div>

<div class="content-product-vh">
    <div class="container">
        <div class="row">
            <a href="~/Books/SearchByCate/2/1">
                <h4>Sách trinh thám</h4>
            </a>
            @{
                Html.RenderAction("SearchByCate", "PopularContent", new { id = 2 });
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/ajax")
<script>
    function clickModal(id) {
        $("#myModal" + id).modal();
    }
    window.setInterval(function () {
        $("#nextImg").click();
    }, 5000);
</script>
